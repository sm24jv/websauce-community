rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users Collection Rules
	match /users/{userId} {
      // Allow create if user is creating their own OR if requestor is admin
      allow create: if request.auth != null &&
                     (request.auth.uid == userId ||
                      get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');

      // Allow read if user is reading their own OR if requestor is admin
      allow read: if request.auth != null &&
                   (request.auth.uid == userId ||
                    get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');

      // Allow update if user is updating their own OR if requester is admin
			allow update: if request.auth != null &&
                 (request.auth.uid == userId ||
                  get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
      // OR: allow update: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');

      // Allow delete ONLY if user is deleting their own (or only admin)
      allow delete: if request.auth != null &&
      						(request.auth.uid == userId ||
                   get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
      // OR: allow delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
       // --- Settings Rules ---
    // Allow only admin users to read and write the platform settings document
    match /settings/platform {
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    // --- End Settings Rules ---

    // Course, Week, Chapter Rules (Example - Adjust based on needs)
    // These allow any authenticated user to read, but only admins to write.
    match /courses/{courseId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    match /weeks/{weekId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
     match /chapters/{chapterId} {
       allow read: if request.auth != null;
       allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
     }

    // Default deny for any unspecified paths
    match /{document=**} {
      allow read, write: if false;
    }
  }
}